#!/bin/sh
set -x
set -e

BUILD=$1
CACHE=$2

cd $CACHE

if cd snappy; then
  git pull
else
  git clone https://github.com/google/snappy.git --depth 1 --single-branch --branch=1.1.4
fi
cd snappy
./autogen.sh
./configure --prefix=$BUILD/vendor
make
make install
cd -

if cd libpostal; then
  git pull
else
  git clone https://github.com/openvenues/libpostal --depth 1 --single-branch --branch=master
  cd libpostal
fi
./bootstrap.sh
LDFLAGS="-L$BUILD/vendor/lib" CFLAGS="-I$BUILD/vendor/include" PKG_CONFIG_PATH="$BUILD/vendor/lib/pkgconfig" ./configure --prefix=$BUILD/vendor --datadir=$BUILD/vendor/libpostal-data
make
make install

cp --recursive $BUILD/vendor/include $BUILD/vendor/lib /app/vendor
