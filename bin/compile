#!/bin/sh
set -e

BUILD=$1
CACHE=$2

cd $CACHE

git clone https://github.com/openvenues/libpostal --depth 1 --single-branch --branch=master
cd libpostal/
./bootstrap.sh
LDFLAGS="-L$BUILD/vendor/lib" CFLAGS="-I$BUILD/vendor/include" PKG_CONFIG_PATH="$BUILD/vendor/lib/pkgconfig" ./configure --prefix=$BUILD/vendor/ --datadir=$BUILD/vendor/var
make
make install
