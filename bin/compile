#!/bin/sh
set -e

build=$1
cache=$2

mkdir -p $build
mkdir -p $cache

cd $cache

git clone https://github.com/openvenues/libpostal --depth 1 --single-branch --branch=master
cd libpostal/
./bootstrap.sh
LDFLAGS="-L$build/lib" CFLAGS="-I$build/include" PKG_CONFIG_PATH="$build/lib/pkgconfig" ./configure --prefix=/app/libpostal --datadir="$cache/data"
make
make install

mv /app/libpostal $build
