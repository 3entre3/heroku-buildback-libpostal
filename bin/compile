#!/bin/sh
set -x
set -e

BUILD=$1
CACHE=$2

cd $CACHE

if cd libpostal; then
  git pull
else
  git clone https://github.com/openvenues/libpostal --depth 1 --single-branch --branch=master
  cd libpostal
fi
./bootstrap.sh
./configure --prefix=/app/vendor  --disable-data-download --datadir=/app/vendor/share/libpostal
make
# install libpostal to /app/vendor so it would be available for a slug compilation
make install
# install libpostal to a build directory so it would appear in the slug
ln -sf $BUILD ../app
make install DESTDIR=$BUILD/../
