#!/bin/sh
set -x
set -e

BUILD=$1
CACHE=$2

cd $CACHE

if cd libpostal; then
  git pull
else
  git clone https://github.com/openvenues/libpostal --depth 1 --single-branch --branch=master
  cd libpostal
fi
./bootstrap.sh
LDFLAGS="-L/app/vendor/lib" CFLAGS="-I/app/vendor/include" PKG_CONFIG_PATH="/app/vendor/lib/pkgconfig" ./configure --prefix=/app/vendor  --disable-data-download --datadir=/app/vendor/share/libpostal
make
make install

mkdir --parent $BUILD/vendor
cp --recursive /app/vendor/bin /app/vendor/lib /app/vendor/include $BUILD/vendor
